<UserControl x:Class="Ui.Menu.UserControls.DropdownUserControl"
             Name="UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:auxiliary="clr-namespace:Ui.Menu.Auxiliary"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Resolution Data Template -->
        <DataTemplate DataType="{x:Type auxiliary:ResolutionUi}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Text="{Binding Width}"
                           Style="{StaticResource NormalTextBlockStyle}" />
                <TextBlock Grid.Column="1"
                           Text="x"
                           Style="{StaticResource NormalTextBlockStyle}" />
                <TextBlock Grid.Column="2"
                           Text="{Binding Height}"
                           Style="{StaticResource NormalTextBlockStyle}" />
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <!-- Dropdown User control -->
    <Grid HorizontalAlignment="Stretch" Height="80">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0"
                   Text="{Binding Text, ElementName=UserControl}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Stretch"
                   Margin="0 0 20 0" />
        <ComboBox Grid.Column="1"
                  Margin="0 10 0 10"
                  ItemTemplate="{Binding ItemTemplate, ElementName=UserControl}"
                  Style="{StaticResource ComboBoxStyle}"
                  SelectedItem="{Binding SelectedItem, ElementName=UserControl, Mode=TwoWay}"
                  ItemsSource="{Binding ItemsSource, ElementName=UserControl}">
        </ComboBox>
    </Grid>

</UserControl>
