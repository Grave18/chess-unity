<UserControl x:Class="Ui.Menu.Pages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:userControls="clr-namespace:Ui.Menu.UserControls"
             mc:Ignorable="d"
             d:DesignWidth="640" d:DesignHeight="1080">

    <Grid IsSharedSizeScope="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="170" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0"
               Content="Settings"
               Style="{DynamicResource HeaderLabel}" />
        <TabControl Grid.Row="1"
                    Style="{DynamicResource TabControlTheme}">

            <!-- Game Settings -->
            <TabItem Header="Game"
                     Name="GameSettingsTab"
                     Style="{DynamicResource TabItemStyle}">
                <DockPanel Margin="30">
                    <!-- Name TextBox -->
                    <Grid DockPanel.Dock="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="Name"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"/>
                        <TextBox Grid.Column="1"
                                 Margin="0 10 0 10"
                                 Text="{Binding PlayerName}"
                                 Style="{StaticResource FenTextBoxStyle}"/>
                    </Grid>
                    <!-- Time dropdown -->
                    <userControls:DropdownUserControl DockPanel.Dock="Top"
                                                      Text="Time"
                                                      SelectedItem="{Binding SelectedTime, Mode=TwoWay}"
                                                      ItemsSource="{Binding Times}" />
                    <!-- Difficulty dropdown -->
                    <userControls:DropdownUserControl DockPanel.Dock="Top"
                                                      Text="Difficulty"
                                                      SelectedItem="{Binding SelectedDifficulty, Mode=TwoWay}"
                                                      ItemsSource="{Binding Difficulties}" />
                    <!-- Fen Text Box --> 
                    <userControls:FenTextBox VerticalAlignment="Top"/>
                </DockPanel>
            </TabItem>

            <!-- Graphics Settings -->
            <TabItem Header="Graphics"
                     Name="GraphicsSettingsTab"
                     Style="{DynamicResource TabItemStyle}">
                <DockPanel Margin="30">
                    <!-- Time dropdown -->
                    <userControls:DropdownUserControl DockPanel.Dock="Top"/>

                    <!-- Fen Text Box -->
                    <userControls:FenTextBox DockPanel.Dock="Top" />
                </DockPanel>
            </TabItem>

            <!-- Controls Settings -->
            <TabItem Header="Controls"
                     Name="ControlSettingsTab"
                     Style="{DynamicResource TabItemStyle}">
                <DockPanel Margin="30">
                    <!-- Time dropdown -->
                    <userControls:DropdownUserControl DockPanel.Dock="Top" />
                    <!-- Fen Text Box -->
                    <userControls:FenTextBox DockPanel.Dock="Top" />
                    <!-- Debug Localhost Buttons -->
                    <Grid Height="80" DockPanel.Dock="Top" Margin="0 20 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="220"/>
                            <ColumnDefinition Width="220"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0"
                                Content="Host"
                                Style="{StaticResource FenButtonStyle}" />
                        <Button Grid.Column="1"
                                Content="Local"
                                Style="{StaticResource FenButtonStyle}" />
                    </Grid>
                </DockPanel>
            </TabItem>

            <!-- Audio Settings -->
            <TabItem Header="Audio"
                     Name="AudioSettingsTab"
                     Style="{DynamicResource TabItemStyle}">
                Audio
            </TabItem>

        </TabControl>
        <!-- Back Button -->
        <Button Grid.Row="2"
                Margin="0 0 0 20"
                Content="Back"
                Click="Back_Click"/>
    </Grid>

</UserControl>