<UserControl x:Class="Ui.Menu.Pages.BoardPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:userControls="clr-namespace:Ui.Menu.UserControls"
             mc:Ignorable="d"
             d:DesignWidth="640" d:DesignHeight="1080"
             Focusable="True">

    <Grid IsSharedSizeScope="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="170" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0"
               Content="Board"
               Style="{DynamicResource HeaderLabelStyle}" />

        <Border Grid.Row="1"
                Style="{StaticResource SettingsControlsBorder}">
            <DockPanel>
                <userControls:DropdownUserControl DockPanel.Dock="Top"
                                                  Text="Pieces"
                                                  SelectedItem="{Binding SelectedPiece, Mode=TwoWay}"
                                                  ItemsSource="{Binding Pieces}" />

                <userControls:DropdownUserControl VerticalAlignment="Top"
                                                  Text="Board"
                                                  SelectedItem="{Binding SelectedBoard, Mode=TwoWay}"
                                                  ItemsSource="{Binding Boards}" />
            </DockPanel>
        </Border>

        <Button Grid.Row="2"
                Margin="0 0 0 20"
                Content="Back"
                Click="Back_Click"/>
    </Grid>

</UserControl>