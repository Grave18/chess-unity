<UserControl x:Class="Ui.Menu.Pages.BoardPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:userControls="clr-namespace:Ui.Menu.UserControls"
             mc:Ignorable="d"
             d:DesignWidth="640" d:DesignHeight="1080">

    <Grid IsSharedSizeScope="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="170" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0"
               Content="Board"
               Style="{DynamicResource HeaderLabelStyle}" />

        <Border Grid.Row="1"
                Background="{StaticResource DarkerBackgroundBrush}"
                CornerRadius="15"
                Margin="20"
                Padding="20">
            <StackPanel>
                <Grid HorizontalAlignment="Stretch" Height="80">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                           Text="Pieces"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Stretch"
                           Margin="0 0 20 0" />
                    <ComboBox Grid.Column="1"
                          Margin="0 10 0 10"
                          Style="{DynamicResource ComboBoxStyle}"
                          SelectedItem="{Binding SelectedItem}"
                          ItemsSource="{Binding Items}" />
                </Grid>
                <Grid HorizontalAlignment="Stretch" Height="80">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                           Text="Board"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Stretch"
                           Margin="0 0 20 0" />
                    <ComboBox Grid.Column="1"
                          Margin="0 10 0 10"
                          Style="{DynamicResource ComboBoxStyle}"
                          SelectedItem="{Binding SelectedItem}"
                          ItemsSource="{Binding Items}" />
                </Grid>
            </StackPanel>
        </Border>

        <Button Grid.Row="2"
                Margin="0 0 0 20"
                Content="Back"
                Click="Back_Click"/>
    </Grid>

</UserControl>