<UserControl x:Class="Ui.InGame.Pages.InGameSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:userControls="clr-namespace:Ui.Menu.UserControls"
             xmlns:noesis="clr-namespace:NoesisGUIExtensions;assembly=Noesis.GUI.Extensions"
             mc:Ignorable="d"
             d:DesignWidth="640" d:DesignHeight="1080">

    <noesis:Xaml.Dependencies>
        <noesis:Dependency Source="../../Menu/UserControls/DropdownUserControl.xaml" />
    </noesis:Xaml.Dependencies>
    <Grid IsSharedSizeScope="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="170" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Settings"
                   Style="{DynamicResource HeaderTextBlockStyle}" />
        <TabControl Grid.Row="1"
                    Focusable="True"
                    Style="{DynamicResource TabControlStyle}">

            <!-- Graphics Settings -->
            <TabItem Header="Graphics"
                     Name="GraphicsSettingsTab"
                     Style="{DynamicResource TabItemStyle}">
                <DockPanel Margin="30">
                    <!-- Screen dropdown -->
                    <userControls:DropdownUserControl DockPanel.Dock="Top"
                                                      Text="Screen"
                                                      SelectedItem="{Binding SelectedFullscreenMode, Mode=TwoWay}"
                                                      ItemsSource="{Binding FullscreenModes}" />
                    <!-- Resolution dropdown -->
                    <userControls:DropdownUserControl DockPanel.Dock="Top"
                                                      Text="Resolution"
                                                      SelectedItem="{Binding SelectedResolution, Mode=TwoWay}"
                                                      ItemsSource="{Binding Resolutions}">
                    </userControls:DropdownUserControl>

                    <!-- Quality dropdown -->
                    <userControls:DropdownUserControl DockPanel.Dock="Top"
                                                      Text="Quality"
                                                      SelectedItem="{Binding SelectedQuality, Mode=TwoWay}"
                                                      ItemsSource="{Binding Qualities}" />

                    <!-- Apply -->
                    <Button VerticalAlignment="Bottom"
                            Content="Apply"
                            Command="{Binding ApplySettingsCommand}" />
                </DockPanel>
            </TabItem>

            <!-- Controls Settings -->
            <TabItem Header="Controls"
                     Visibility="Collapsed"
                     Name="ControlSettingsTab"
                     Style="{DynamicResource TabItemStyle}">
                <DockPanel Margin="30">
                    <!-- Time dropdown -->
                    <userControls:DropdownUserControl DockPanel.Dock="Top" />
                    <!-- Fen Text Box -->
                    <userControls:FenTextBox DockPanel.Dock="Top" />
                    <!-- Debug Localhost Buttons -->
                    <Grid Height="80" DockPanel.Dock="Top" Margin="0 20 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="220" />
                            <ColumnDefinition Width="220" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0"
                                Content="Host"
                                Style="{StaticResource FenButtonStyle}" />
                        <Button Grid.Column="1"
                                Content="Local"
                                Style="{StaticResource FenButtonStyle}" />
                    </Grid>
                </DockPanel>
            </TabItem>

            <!-- Audio Settings -->
            <TabItem Header="Audio"
                     Name="AudioSettingsTab"
                     Style="{DynamicResource TabItemStyle}">
                <DockPanel Margin="30">

                    <DockPanel.Resources>
                        <!-- Style For Tab's Grids -->
                        <Style TargetType="Grid">
                            <Setter Property="Margin" Value="0 20 0 20" />
                        </Style>
                    </DockPanel.Resources>

                    <!-- Master -->
                    <Grid DockPanel.Dock="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="Master"
                                   Style="{StaticResource NormalTextBlockStyle}" />
                        <Slider Grid.Column="1"
                                Value="{Binding MasterVolume}"
                                Style="{StaticResource HorizontalSliderStyle}" />
                    </Grid>

                    <!-- Music -->
                    <Grid DockPanel.Dock="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="Music"
                                   Style="{StaticResource NormalTextBlockStyle}" />
                        <Slider Grid.Column="1"
                                Value="{Binding MusicVolume}"
                                Style="{StaticResource HorizontalSliderStyle}"/>
                    </Grid>

                    <!-- Effects -->
                    <Grid VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="Effects"
                                   Style="{StaticResource NormalTextBlockStyle}" />
                        <Slider Grid.Column="1"
                                Value="{Binding EffectsVolume}"
                                Style="{StaticResource HorizontalSliderStyle}"/>
                    </Grid>

                </DockPanel>

            </TabItem>

        </TabControl>
        <!-- Back Button -->
        <Button Grid.Row="2"
                Margin="0 0 0 20"
                Content="Back"
                Click="Back_Click" />
    </Grid>

</UserControl>