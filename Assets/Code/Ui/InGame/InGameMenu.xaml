<UserControl x:Class="Ui.InGame.InGameMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:noesis="clr-namespace:NoesisGUIExtensions;assembly=Noesis.GUI.Extensions"
             xmlns:pages="clr-namespace:Ui.Menu.Pages"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignWidth="1920" d:DesignHeight="1080"
             Style="{StaticResource MainMenuStyle}">

    <noesis:Xaml.Dependencies>
        <noesis:Dependency Source="../Menu/Pages/PlayPage.xaml" />
        <noesis:Dependency Source="../Menu/Pages/BoardPage.xaml" />
        <noesis:Dependency Source="../Menu/Pages/SettingsPage.xaml" />
    </noesis:Xaml.Dependencies>

    <Viewbox Stretch="Uniform">
        <Grid Width="1920" Height="1080">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Style="{StaticResource MainMenuBorder}"
                    Margin="20, 20, 10, 20">
                <ContentControl Name="ContentControl"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch">
                    <pages:MainPage />
                </ContentControl>
            </Border>

            <Border Grid.Column="1"
                    Style="{StaticResource MainMenuBorder}"
                    Margin="10, 20, 20, 20">
                <Image Source="{Binding ImageSource}" />
            </Border>
        </Grid>
    </Viewbox>

</UserControl>