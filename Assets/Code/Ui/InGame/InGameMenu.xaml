<auxiliary:GameMenuBase x:Class="Ui.InGame.InGameMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:noesis="clr-namespace:NoesisGUIExtensions;assembly=Noesis.GUI.Extensions"
             xmlns:pages="clr-namespace:Ui.InGame.Pages"
             xmlns:auxiliary="clr-namespace:Ui.Auxiliary"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignWidth="1920" d:DesignHeight="1080"
             Style="{StaticResource MainMenuStyle}"
             Background="Transparent">

    <auxiliary:GameMenuBase.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <Style x:Key="AnimatedBorderStyle"
               TargetType="Border"
               BasedOn="{StaticResource MainMenuBorder}">
            <Style.Triggers>
                <Trigger Property="Visibility" Value="Collapsed">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="Background.Color"
                                                Duration="0:0:0.2"
                                                To="Transparent" />
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                </Trigger>
                <Trigger Property="Visibility" Value="Visible">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="Background.Color"
                                                Duration="0:0:0.2"
                                                From="Transparent">
                                    <ColorAnimation.EasingFunction>
                                        <QuadraticEase EasingMode="EaseInOut" />
                                    </ColorAnimation.EasingFunction>
                                </ColorAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                </Trigger>
            </Style.Triggers>
        </Style>

    </auxiliary:GameMenuBase.Resources>

    <noesis:Xaml.Dependencies>
        <noesis:Dependency Source="../InGame/Pages/InGamePage.xaml" />
        <noesis:Dependency Source="../InGame/Pages/InGameSettingsPage.xaml" />
    </noesis:Xaml.Dependencies>

    <Viewbox Stretch="Uniform">
        <Grid Width="1920" Height="1080">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Name="Border"
                    d:Visibility="Visible"
                    Visibility="{Binding IsOpened, Mode=TwoWay, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Style="{StaticResource AnimatedBorderStyle}"
                    Margin="20, 20, 10, 20">

                <ContentControl Name="ContentControl"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch">
                    <!-- Left Side Page -->
                    <pages:InGamePage />
                </ContentControl>
            </Border>

            <Border Grid.Column="1"
                    Background="Transparent"
                    Style="{StaticResource MainMenuBorder}"
                    Margin="10, 20, 20, 20">

                <!-- Sandwich menu -->
                <Grid Margin="30">
                    <Button Name="SandwichButton"
                            Command="{Binding OpenCloseCommand}"
                            Style="{StaticResource SandwichButtonStyle}" />
                </Grid>

            </Border>
        </Grid>
    </Viewbox>

</auxiliary:GameMenuBase>