<auxiliary:GameMenuBase x:Class="Ui.InGame.InGameMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:noesis="clr-namespace:NoesisGUIExtensions;assembly=Noesis.GUI.Extensions"
             xmlns:pages="clr-namespace:Ui.InGame.Pages"
             xmlns:auxiliary="clr-namespace:Ui.Auxiliary"
             xmlns:local="clr-namespace:Ui.InGame"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignWidth="1920" d:DesignHeight="1080"
             Style="{StaticResource MainMenuStyle}"
             Background="Transparent">

    <auxiliary:GameMenuBase.Resources>

        <!-- Animated Sliding Panel Border -->
        <Style x:Key="AnimatedBorderStyle"
               TargetType="Border"
               BasedOn="{StaticResource MainMenuBorder}">
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform X="-1000" Y="0"/>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="local:Attached.Show" Value="False">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                                 Duration="0:0:0.1"
                                                 To="-1000">
                                    <DoubleAnimation.EasingFunction>
                                        <QuadraticEase EasingMode="EaseInOut" />
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                </Trigger>
                <Trigger Property="local:Attached.Show" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                                Duration="0:0:0.3"
                                                To="0">
                                    <DoubleAnimation.EasingFunction>
                                        <PowerEase Power="5" EasingMode="EaseOut" />
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                </Trigger>
            </Style.Triggers>
        </Style>

    </auxiliary:GameMenuBase.Resources>

    <noesis:Xaml.Dependencies>
        <noesis:Dependency Source="../InGame/Pages/InGamePage.xaml" />
        <noesis:Dependency Source="../InGame/Pages/InGameSettingsPage.xaml" />
    </noesis:Xaml.Dependencies>

    <Viewbox Stretch="Uniform">
        <Grid Width="1920" Height="1080">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- Sliding Panel -->
            <Border Grid.Column="0"
                    Name="SlidingPanel"
                    local:Attached.Show="{Binding IsOpened, Mode=TwoWay}"
                    Style="{StaticResource AnimatedBorderStyle}"
                    Margin="20, 20, 10, 20">

                <ContentControl Name="ContentControl"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch">
                    <!-- Changeable Page -->
                    <pages:InGamePage />
                </ContentControl>
            </Border>

            <Border Grid.Column="1"
                    Background="Transparent"
                    Style="{StaticResource MainMenuBorder}"
                    Margin="10, 20, 20, 20">

                <!-- Sandwich menu -->
                <Grid Margin="30">
                    <Button Name="SandwichButton"
                            Command="{Binding OpenCloseCommand}"
                            Style="{StaticResource SandwichButtonStyle}" />
                </Grid>

            </Border>
        </Grid>
    </Viewbox>

</auxiliary:GameMenuBase>