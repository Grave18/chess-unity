<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Color Pallet-->
    <Color x:Key="American River">#636e72</Color>
    <Color x:Key="Dracula Orchid">#2d3436</Color>
    <Color x:Key="Mint Leaf">#00b894</Color>
    <Color x:Key="Darker Mint Leaf" >#FF009C7D</Color>
    <Color x:Key="City Lights">#dfe6e9</Color>
    <SolidColorBrush x:Key="DarkerBackgroundBrush" Color="{StaticResource Dracula Orchid}" />
    <SolidColorBrush x:Key="LighterBackgroundBrush" Color="{StaticResource American River}" />
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="{StaticResource Mint Leaf}" />
    <SolidColorBrush x:Key="MouseOverButtonBrush" Color="{StaticResource Darker Mint Leaf}" />
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource City Lights}" />

    <!-- Main Style-->
    <Style x:Key="MainMenuStyle" TargetType="UserControl">
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontWeight" Value="Black" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
        <Setter Property="Background" Value="{StaticResource DarkerBackgroundBrush}" />
    </Style>

    <!-- Header -->
    <Style x:Key="Header" TargetType="TextBlock">
        <Setter Property="FontSize" Value="48" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- Button -->
    <ControlTemplate x:Key="ButtonTemplate" TargetType="Button">
        <Grid> 
            <Border x:Name="Border"
                     BorderBrush="{TemplateBinding BorderBrush}"
                     Background="{TemplateBinding Background}"
                     CornerRadius="15" />
            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                              Content="{TemplateBinding Content}"
                              Margin="{TemplateBinding Padding}"
                              TextBlock.Foreground="{TemplateBinding Foreground}" />
        </Grid>
        <ControlTemplate.Triggers>
            
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Duration="0:0:0.15"  By="Black" To="{StaticResource Darker Mint Leaf}"
                                            Storyboard.TargetProperty="Background.Color">
                            </ColorAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Duration="0:0:0.15" To="{StaticResource Mint Leaf}"
                                            Storyboard.TargetProperty="Background.Color">
                            </ColorAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
                
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <Style TargetType="Button">
        <Setter Property="Template" Value="{StaticResource ButtonTemplate}"/>
        <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}" />
        <Setter Property="FontSize" Value="48" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Width" Value="400" />
        <Setter Property="Height" Value="110" />
    </Style>

    <!-- Border -->
    <Style x:Key="MainMenuBorder" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource LighterBackgroundBrush}" />
        <Setter Property="CornerRadius" Value="15" />
    </Style>

    <!-- Combobox -->
    <Style x:Key="ComboboxLabel" TargetType="Label">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Width" Value="100" />
        <Setter Property="Height" Value="50" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

</ResourceDictionary>