<UserControl x:Class="Ui.Noesis.UserControls.FenTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ui.Noesis.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="640">

    <!-- Fen Text Box -->
    <Grid Margin="0 10 0 10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0"
                   Text="Fen"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   FontSize="30" />
        <Button Grid.Row="0" Grid.Column="1"
                Content="Reset"
                Style="{StaticResource FenButtonStyle}" />
        <Button Grid.Row="0" Grid.Column="2"
                Content="Custom"
                Style="{StaticResource FenButtonStyle}" />
        <TextBox Grid.Row="1" Grid.Column="0"
                 Grid.ColumnSpan="3"
                 Style="{StaticResource FenTextBoxStyle}" />
    </Grid>
</UserControl>
